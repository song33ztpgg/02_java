      // 매소드 이름            // 아규먼트            // 리턴타입
 <select id="selectAll2"     parameterType="Emp"     resultType="Emp"> 
  
  
  
    SELECT p.code
         , p.name
         , p.price
         , p.quantity
      FROM PRODUCT p
      【sql 구문】
      
      
    </select>           
   【닫는 부분】        
    
