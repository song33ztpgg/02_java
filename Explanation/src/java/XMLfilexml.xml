<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper>
    
    <select id="selectAllProducts" resultType="Product"> 
                  【맴퍼 이름】              【리턴 타입】
  
  ■ 매소드 변환 하는법 
     
      // 매소드 이름            // 아규먼트            // 리턴타입
 <select id="selectAll2"     parameterType="Emp"     resultType="Emp"> 
  
  
  
    SELECT p.code
         , p.name
         , p.price
         , p.quantity
      FROM PRODUCT p
      【sql 구문】
      WHERE p.price = #{p.test}  
                      // 자바에 존재하는 p.test를 비교한다          
      
      
      
      
      
    </select>           
   【닫는 부분】        
    
</mapper>   

